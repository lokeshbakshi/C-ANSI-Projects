#include <stdio.h>

int main()
{
  int p;
  int r;
  int t;
  printf("Enter princicple investment: $");
  scanf("%d", &p);
  printf("enter the rate: ");
  scanf("%d", &r);
  printf("enter the time: ");
  scanf("%d", &t);
  int i = (p*r*t)/100;
  printf("The total interest earned is: $%d: \n", i);
  int a = p + i;
  printf("The total Amount after investment is: $%d", a);
}
  
